//check in this program to profit or loss 
#include<stdio.h>
int main()
{
	int cost, sellprize,profit,loss;
	printf("Enter your cost prize of your product\n");
	scanf("%d",&cost);
	printf("Enter your selling prize \n");
	scanf("%d",&sellprize);
	profit=sellprize-cost;
	loss=cost-sellprize;
	if(cost>sellprize)
	printf("loss=%d",loss);
	else
	printf("profit=%d\n\ncongrats you",profit);
}
/*..............OUTPUT SCREEN..................

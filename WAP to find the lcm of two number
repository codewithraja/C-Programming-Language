//WAP to find the lcm of two number
#include<stdio.h>
int main()
{
	int num1,num2,max_div;
	printf("Enter any two positive integer:\n");
	scanf("%d %d",&num1,&num2);
	max_div=(num1>num2)?num1:num2;
	while(1)
	{
		if(max_div%num1==0&&max_div%num2==0)
		{
			printf("The LCM of %d and %d= %d",num1,num2,max_div);
			break;
		}
		++max_div;
	}
  return 0;
}
/*..............OUTPUT SCREEN...................
Enter any two positive integer:
8
6
The LCM of 8 and 6= 24
--------------------------------
Process exited after 5.682 seconds with return value 0
Press any key to continue . . .*/

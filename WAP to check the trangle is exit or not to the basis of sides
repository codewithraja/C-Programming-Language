//WAP to check the trangle is exit or not to the basis of sides
#include<stdio.h>
int main()
{
	int a,b,c;
	printf("Enter the sides of an trangle\n");
	scanf("%d%d%d",&a,&b,&c);
	if(a+b>c)
	{
		printf("The trangle is valid");
	}
	else if(a+c>b)
	printf("The trangle is valid");
	else if(b+c>a)
	printf("The trangle is valid");
	else
	printf("The trangle is not valid");
	return 0;
}
/*..................OUTPUT SCREEN..................
Enter the sides of an trangle
5
7
6
The trangle is valid
--------------------------------
